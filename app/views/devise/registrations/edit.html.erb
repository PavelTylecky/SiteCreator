<h2><%= I18n.t('devise.registrations.edit.title') %><%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= I18n.t('devise.registrations.edit.currently_waiting_confirmation_for_email') %><%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %>
      <i>(<%= I18n.t('devise.registrations.edit.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br/>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
          <br/>
          <em><%= @minimum_password_length %> <%= I18n.t('devise.characters_minimum') %></em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %>
      <i>(<%= I18n.t('devise.registrations.edit.we_need_your_current_password_to_confirm_your_changes') %>)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit I18n.t('devise.registrations.edit.update') %>
    </div>
<% end %>

<h3><%= f.submit I18n.t('devise.registrations.edit.cancel_my_account') %></h3>

<p><%= f.submit I18n.t('devise.registrations.edit.unhappy') %>
  ? <%= button_to f.submit I18n.t('devise.registrations.edit.cancel_my_account'),
                           registration_path(resource_name), data: {confirm: f.submit I18n.t('devise.registrations.edit.are_you_sure')}, method: :delete %></p>

<%= link_to f.submit I18n.t('devise.registrations.edit.cancel_my_account'), :back %>
