<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Menu type</th>
      <th>Title</th>
      <th>User Id</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.theme %></td>
        <td><%= site.menu_type %></td>
        <td><%= site.title %></td>
        <td>----<%= site.user_id %>----</td>

        <td><%= link_to 'Show', user_site_path(site.user_id, site) %></td>
        <td><%= link_to 'Edit', edit_user_site_page_path(site.user_id, site, site.first_page) %></td>
        <td><%= link_to 'Destroy', user_site_path(site.user_id, site), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


