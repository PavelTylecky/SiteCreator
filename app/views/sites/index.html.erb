<link rel="stylesheet" type="text/css" href="jqcloud.css" />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
<%= javascript_include_tag('jqcloud.js') %>

<script type="text/javascript">

  var word_array = [
    <% Site.tag_counts.each do |tag| %>
    {text: "<%= tag.name %>", weight: <%= tag.taggings_count %>, link: "<%= search_path(:tag => tag.name) %>" },
    <% end %>
  ];

  $(function() {
    $("#tag-cloud").jQCloud(word_array, {});
  });
</script>
<div id="tag-cloud" style="width: 550px; height: 350px; color: black;"></div>
<%= render "sites" %>