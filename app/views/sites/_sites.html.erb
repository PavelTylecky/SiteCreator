<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Menu type</th>
      <th>Title</th>
      <th>User Id</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.theme %></td>
        <td><%= site.menu_type %></td>
        <td><%= site.title %></td>
        <td>----<%= site.user_id %>----</td>
        <% if can? :read, site %>
        <td><%= link_to 'Show', site_path(site) %></td>
        <% end %>
        <% if can? :read, site.pages.first %>
        <td><%= link_to 'preview', site_page_path(site, site.first_page) %></td>
        <% end %>
        <% if can? :update, site %>
        <td><%= link_to 'Edit', edit_site_page_path(site, site.first_page) %></td>
        <% end %>
        <% if can? :destroy, site %>
        <td><%= link_to 'Destroy', site_path(site), method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Site %>
<%= link_to 'New Site', new_site_path %>
<% end %>
